{
    "name": "framepay-react",
    "version": "1.0.0",
    "description": "description",
    "main": "build/main/index.js",
    "typings": "build/main/index.d.ts",
    "module": "build/module/index.js",
    "repository": "https://github.com/Rebilly/framepay-react",
    "license": "MIT",
    "keywords": [
        "framepay"
    ],
    "files": [
        "build",
        "src"
    ],
    "scripts": {
        "build": "run-s clean && run-p build:*",
        "build:main": "tsc -p tsconfig.json",
        "build:module": "tsc -p tsconfig.module.json",
        "fix": "run-s fix:*",
        "fix:prettier": "prettier \"src/**/*.ts\" \"src/**/*.tsx\" \"test/**/*.ts\" \"test/**/*.tsx\" \"./*.json\"  --write",
        "fix:tslint": "tslint --fix --project .",
        "test": "run-s test:*",
        "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
        "test:unit": "jest --env=node --colors --coverage test",
        "watch:main": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
        "watch:module": "run-s clean build:module && run-p \"build:module -- -w\" \"test:unit -- --watch\"",
        "clean": "trash build",
        "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('framepay-react must be installed with Yarn: https://yarnpkg.com/')\"",
        "precommit": "yarn fix",
        "prepush": "yarn fix && yarn test"
    },
    "engines": {
        "node": ">=11.0",
        "npm": ">=6.4.0",
        "yarn": ">= 1.9"
    },
    "dependencies": {
        "react": "^16.8.6"
    },
    "devDependencies": {
        "@fluffy-spoon/substitute": "^1.86.0",
        "@types/enzyme": "^3.9.1",
        "@types/jest": "^24.0.11",
        "@types/node": "^11.13.0",
        "@types/react": "^16.8.10",
        "@types/react-dom": "^16.8.3",
        "cross-env": "^5.2.0",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.11.2",
        "gh-pages": "^2.0.1",
        "husky": "^1.3.1",
        "jest": "^24.6.0",
        "jest-pnp-resolver": "^1.2.1",
        "jest-resolve": "^24.6.0",
        "jest-watch-typeahead": "^0.3.0",
        "npm-run-all": "^4.1.5",
        "opn-cli": "^4.0.0",
        "prettier": "^1.15.2",
        "react-dom": "^16.8.6",
        "trash-cli": "^1.4.0",
        "ts-jest": "^24.0.1",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.17.0",
        "tslint-immutable": "^5.0.0",
        "typemoq": "^2.1.0",
        "typescript": "^3.1.6"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/test/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/test/setup.js"
        ]
    },
    "prettier": {
        "singleQuote": true
    },
    "nyc": {
        "exclude": [
            "**/*.spec.js"
        ]
    }
}
